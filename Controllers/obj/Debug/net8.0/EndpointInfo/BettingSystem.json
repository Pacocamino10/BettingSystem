{
  "openapi": "3.0.1",
  "info": {
    "title": "BettingSystem",
    "version": "1.0"
  },
  "paths": {
    "/Bet": {
      "post": {
        "tags": [
          "Bet"
        ],
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/Bet"
              }
            },
            "text/json": {
              "schema": {
                "$ref": "#/components/schemas/Bet"
              }
            },
            "application/*+json": {
              "schema": {
                "$ref": "#/components/schemas/Bet"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "OK"
          }
        }
      }
    },
    "/Bet/shutdown": {
      "post": {
        "tags": [
          "Bet"
        ],
        "responses": {
          "200": {
            "description": "OK"
          }
        }
      }
    },
    "/Bet/summary": {
      "get": {
        "tags": [
          "Bet"
        ],
        "responses": {
          "200": {
            "description": "OK"
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "Bet": {
        "type": "object",
        "properties": {
          "id": {
            "type": "integer",
            "format": "int32"
          },
          "amount": {
            "type": "number",
            "format": "double"
          },
          "odds": {
            "type": "number",
            "format": "double"
          },
          "client": {
            "type": "string",
            "nullable": true
          },
          "event": {
            "type": "string",
            "nullable": true
          },
          "market": {
            "type": "string",
            "nullable": true
          },
          "selection": {
            "type": "string",
            "nullable": true
          },
          "status": {
            "$ref": "#/components/schemas/BetStatus"
          }
        },
        "additionalProperties": false
      },
      "BetStatus": {
        "enum": [
          0,
          1,
          2,
          3
        ],
        "type": "integer",
        "format": "int32"
      }
    }
  }
}